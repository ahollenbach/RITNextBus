<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$NextBusFragment" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_light">

        <TextView
            android:text="Next Bus Arrives"
            style="@style/h1"
            android:paddingTop="10dp" />

        <LinearLayout
            style="@style/NextBusGood"
            android:id="@+id/mainHomeBlock" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    style="@style/h2"
                    android:text="At Home"
                    android:textColor="@color/text_lightest"/>

                <TextView
                    style="@style/h3"
                    android:text="(RIT - The Province)"
                    android:id="@+id/mainHomeLocation"
                    android:textColor="@color/text_lights" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="17:24"
                android:id="@+id/mainTimeHome"
                android:textSize="80sp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="0dp"
                android:textColor="@color/text_lightest"/>

            <TextView
                style="@style/aside"
                android:text="(12:37)"
                android:id="@+id/mainTimeTipHome"
                android:textColor="#EEE"/>

        </LinearLayout>
        <LinearLayout
            style="@style/NextBusGood"
            android:id="@+id/mainDestBlock" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    style="@style/h2"
                    android:text="At Destination"
                    android:textColor="@color/text_lightest"/>

                <TextView
                    style="@style/h3"
                    android:text="(RIT - Gleason Circle)"
                    android:id="@+id/mainDestLocation"
                    android:textColor="@color/text_lights" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="2:24"
                android:id="@+id/mainTimeDest"
                android:textSize="80sp"
                android:layout_gravity="center_horizontal"
                android:paddingTop="5dp"
                android:paddingBottom="0dp"
                android:textColor="@color/text_lightest"/>

            <TextView
                style="@style/aside"
                android:text="(12:37)"
                android:id="@+id/mainTimeTipDest"
                android:textColor="#EEE"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
